<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone close to the tag to sense"
        android:textSize="25sp"
        android:background="#009688"
        android:layout_margin="10dp"
        ></TextView>



    <CheckBox
        android:id="@+id/Sram32to61_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="SramData32to61 Enable"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/Sram0to31_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="SramData0to31 Enable"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#03A9F4"
        android:text="Transfer Status:"
        android:textColor="#FFEB3B"
        android:textSize="25sp"></TextView>

    <TextView
        android:id="@+id/dir"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:background="#FFC107"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Data:"
        android:textSize="25sp"
        android:textColor="#FFEB3B"
        android:background="#03A9F4"
        android:layout_margin="10dp"
        ></TextView>

    <TextView
        android:id="@+id/tv_nfc_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="#CDDC39"
        ></TextView>


</LinearLayout>